{
    "name": "long-running/long-running",
    "type": "library",
    "description": "Tools for working with long-running processes",
    "homepage": "http://github.com/LongRunning/LongRunning",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "~1.0",
        "doctrine/orm": "~2.3",
        "phpunit/phpunit": "~4.0",
        "satooshi/php-coveralls": "~0.6",
        "simple-bus/rabbitmq-bundle-bridge": "~2.1",
        "symfony/framework-bundle": "~2.3|~3.0",
        "symfony/monolog-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3"
    },
    "replace": {
        "long-running/bundle": "self.version",
        "long-running/core": "self.version",
        "long-running/plugin-bernard": "self.version",
        "long-running/plugin-doctrine-dbal": "self.version",
        "long-running/plugin-doctrine-orm": "self.version",
        "long-running/plugin-monolog": "self.version",
        "long-running/plugin-simplebus-rabbitmqp": "self.version",
        "long-running/plugin-swiftmailer": "self.version"
    },
    "autoload": {
        "psr-4" : { "LongRunning\\" : "src/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
